@model IEnumerable<giadinhthoxinh.Models.tblCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        @*<li class="nav-item d-none d-sm-inline-block">
                <a href="/admin/category" class="nav-link">Danh mục</a>
            </li>*@
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Danh sách các danh mục</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Danh mục</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>


<section class="content">

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Title</h3>

            <div class="card-tools">
                @*@Html.ActionLink("Create New", "Create", new { @className = "btn btn-primary" })*@
                <a href="/admin/categories/create" class="btn btn-primary">Thêm mới</a>
            </div>
        </div>

        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.sCategoryName)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.sCategoryName)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.PK_iCategoryID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.PK_iCategoryID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.PK_iCategoryID })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>

        <div class="card-footer">
            Footer
        </div>
    </div>
</section>


